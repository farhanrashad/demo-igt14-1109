<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_custom_entry_form_view_inherit_spare_penalty" model="ir.ui.view">
            <field name="name">account.custom.entry.form.view.inehrit.spare.penalty</field>
            <field name="model">account.custom.entry</field>
            <field name="inherit_id" ref="de_custom_journal_entry.account_custom_entry_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//sheet[1]" position="inside">
                    <field name="has_spare_penalty" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='custom_entry_line']/field[@name='custom_entry_line']/tree[1]/field[@name='amount_penalty']" position="before">
                    <!-- Spare Parts -->
                    <field name="sp_location_id" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_asset_id" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_product_id" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>

                    <field name="sp_life_time" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_date_onair" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_date_delivery_deadline" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_date_return_deadline" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_date_delivered" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_date_returned" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_used_life" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_cost" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_quantity" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_back_charges" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>
                    <field name="sp_remarks" attrs="{'column_invisible':[('parent.has_spare_penalty','==','no')], 'required': [('parent.has_spare_penalty','==','required')]}"/>

                </xpath>
                
            </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="report_account_move_line_wizard_form_view" model="ir.ui.view">
			<field name="name">account.move.line.wizard.form.view</field>
			<field name="model">account.move.line.wizard</field>
			<field name="arch" type="xml">
				<form string="General Ledger">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="state" widget="radio"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Accounts">
                            <field name="account_ids" required="1">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
					<footer>
                        
						<button name="print_txt_report" type="object" string="Print" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_account_move_line_wizard" model="ir.actions.act_window">
			<field name="name">General Ledger Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.move.line.wizard</field>
			<field name="view_id" ref="de_report_journal_items.report_account_move_line_wizard_form_view" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
        
        <menuitem action="de_report_journal_items.action_account_move_line_wizard" id="report_journal_items_report_item" name="Journal Items Report" parent="account.menu_finance_reports" sequence="50"/>


    </data>
</odoo>

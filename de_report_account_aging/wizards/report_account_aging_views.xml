<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="report_account_aging_wizard_form_view" model="ir.ui.view">
			<field name="name">report.account.aging.wizard.form.view</field>
			<field name="model">report.account.aging.wizard</field>
			<field name="arch" type="xml">
				<form string="Account Aging Report">
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            
                        </group>
                        <group>
                            <field name="to_date" required="1"/>
                            
                        </group>
                    </group>
                    <group>
                        
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Partners">
                            <field name="partner_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
				
					<footer>
						<button name="print_report" type="object" string="Print" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_report_account_aging_wizard" model="ir.actions.act_window">
			<field name="name">Account Aging Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">report.account.aging.wizard</field>
			<field name="view_id" ref="report_account_aging_wizard_form_view" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
        
        <menuitem action="action_report_account_aging_wizard" id="report_account_aging_report_item" name="Account Aging Report" parent="account.menu_finance_reports" sequence="210"/>


    </data>
</odoo>

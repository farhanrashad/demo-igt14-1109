<odoo>

	<record id="acccount_move_tree_inherit" model="ir.ui.view">
		<field name="name">acccount.move.tree</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form" />
		<field name="arch" type="xml">
			<xpath expr="//group[1]/group[1]" position="inside">
				<field name="category" optional="show" />
                <field name="msa_id" invisible="1" />
			</xpath>
           <!--
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree" position="inside">
-->
            <xpath expr="//field[@name='price_total']" position="after">
				<field name="simulation_date" attrs="{'invisible':[('parent.msa_id','=',False)]}" />
			</xpath>
		</field>
	</record>

</odoo>

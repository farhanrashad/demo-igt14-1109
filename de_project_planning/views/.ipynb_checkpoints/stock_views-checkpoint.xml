<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Stock Picking -->
        <record id="view_picking_form_inherit_project" model="ir.ui.view">
            <field name="name">view.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='origin']" position="after">
                    <field name="project_id" attrs="{'invisible':[('project_id','=',False)]}"/>
                    <field name="state_id" string="Region" attrs="{'invisible':[('state_id','=',False)]}"/>
                </xpath>
                
            </field>
        </record>
        
        <!-- Stock Move -->
        <record id="view_move_form_inehrit_project" model="ir.ui.view">
            <field name="name">view.move.form.inherit.project</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="project_id" optional="show" readonly="1"/>
                    <field name="state_id" optional="hide" readonly="1" string="Region"/>
                </xpath>
                
            </field>
        </record>
        
         <record id="view_stock_move_line_detail_operation_tree_inehrit_project" model="ir.ui.view">
            <field name="name">view.stock.move.line.detail.operation.tree.inherit.project</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="project_id" optional="show" readonly="1"/>
                    <field name="state_id" optional="hide" readonly="1" string="Region"/>
                </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>
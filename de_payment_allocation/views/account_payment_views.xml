<odoo>
  <data>
   
     <record id="account_payment_form_reconcile_view" model="ir.ui.view">
            <field name="name">account.payment.form.reconcile.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="date"]' position='after'>
                     <field name='reconcile_amount' invisible='0' />
                    <field name='reconciled' invisible='0' />
                    <field name='matching_move_id' invisible='1' />
                </xpath>
                
                 <xpath expr='//header' position='inside'>
                     <button name="action_reconcile" string="Reconcile" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'posted'),('reconciled','=',True)]}"/>
                     
                    <button name="action_generate_journal_entry" string="Matching Entry" type="object" class="oe_highlight" />

                     
                     <button name="action_process_openitems" string="Process Open Items" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '=', 'posted'),('reconciled','=',True)]}"/>
                     <button name="action_process_openitems" string="Process Open Items" type="object" invisible="1" attrs="{'invisible': ['|',('state', '!=', 'posted'),('reconciled','=',True)]}"/>

                     
                     <button name="action_generate_journal_entry" string="Generate Entry" type="object" class="oe_highlight" invisible="1"/>  
                </xpath>
                 <xpath expr='//sheet' position='inside'>
                     <notebook>
                         <page string='Open Items'>
                             <h3>Debit</h3>
                             <field name='debit_allocation_ids' attrs="{'readonly':[('state','!=','draft')]}" >
                                 <tree editable='bottom' name="debit_allocation_lines" decoration-success="is_allocate == True" decoration-muted="is_allocate == False and parent.state == 'posted'" >
                                     <field name='move_id' string="Number" readonly='1' force_save='1'/>
                                     <field name='account_id' string="Account" readonly='1' force_save='1'/>  
                                     <field name='date' string="Date" readonly='1' force_save='1' />
                                     <field name='due_date'  readonly='1' force_save='1' />
                                     <field name='invoice_amount' string="Amount" sum="Invoiced Amount" readonly='1' force_save='1' />
                                     <field name='unallocated_amount' string="Unalloc." sum="Unallocated Amount" readonly='1' force_save='1' />
                                     <field name='unallocated_amount_currency' readonly="1" string="Unalloc. Curr." sum="Unallocated Amount Currency"  optional='hide'/>
                                     <field name='is_allocate' nolabel="1" widget="boolean_toggle" force_save='1' attrs="{'column_invisible':['|',('parent.state','=','posted'),('parent.reconciled', '=', True)]}"/>
                                     <field name='allocated_amount_currency' string="Alloc. Curr." sum="Allocated Currency" force_save='1'  attrs="{'readonly':[('parent.reconciled', '=', True)]}"/>
                                     <field name='allocated_amount' string="Alloc." sum="Allocated Amount" force_save='1' readonly="1" invisible='0' />
                                     <field name='payment_id'  invisible='1' />
                                     <field name='move_line_id'  invisible='1' />  
                                     <field name='currency_id' invisible='0'  readonly='1'  force_save='1' optional='hide' />
                                     <field name='company_currency_id' string="Company Currency" readonly='1'  invisible='0' force_save='1'  optional='hide'/>
                                     <field name='allocation_currency_id' string="Alloc. Curr." readonly='1'  invisible='0' force_save='1' optional='hide' />  


                                 </tree>
                             </field>     
                             <h3>Credit</h3>
                             <field name='credit_allocation_ids' attrs="{'readonly':['|',('reconciled', '=', True),('state','!=','draft')]}" >
                                 <tree editable='bottom' name="credit_allocation_lines"  decoration-success="is_allocate == True" decoration-muted="is_allocate == False and parent.state == 'posted'" >
                                     <field name='move_id' string="Number" readonly='1' force_save='1'/>
                                     <field name='account_id' string="Account" readonly='1' force_save='1'/>  
                                     <field name='date' string="Date" readonly='1' force_save='1' />
                                     <field name='due_date'  readonly='1' force_save='1' />
                                     <field name='invoice_amount' string="Amount" sum="Invoiced Amount" readonly='1' force_save='1' />
                                     <field name='unallocated_amount' string="Unalloc." sum="Unallocated Amount" readonly='1' force_save='1' />
                                     <field name='unallocated_amount_currency' readonly="1" string="Unalloc. Curr." sum="Unallocated Amount Currency"  optional='hide'/>
                                     <field name='is_allocate' nolabel="1" widget="boolean_toggle" force_save='1' attrs="{'column_invisible':['|',('parent.state','=','posted'),('parent.reconciled', '=', True)]}"/>
                                     <field name='allocated_amount_currency' string="Alloc. Curr." sum="Allocated Currency" force_save='1'  attrs="{'readonly':[('parent.reconciled', '=', True)]}"/>
                                     <field name='allocated_amount' string="Alloc." sum="Allocated Amount" readonly="1" force_save='1' invisible='0' />
                                    <field name='exchange_diff' string="Exch.G/L" sum="Exchange Gain/Loss" readonly="1" force_save='1' invisible='1' />

                                     <field name='payment_id'  invisible='1' />
                                     <field name='move_line_id'  invisible='1' />  
                                     <field name='currency_id' invisible='0'  readonly='1'  force_save='1' optional='hide' />
                                     <field name='company_currency_id' string="Company Currency" readonly='1'  invisible='0' force_save='1'  optional='hide'/>
                                     <field name='allocation_currency_id' string="Alloc. Curr." readonly='1'  invisible='0' force_save='1' optional='hide' />  


                                 </tree>
                             </field>
                             <group>
                                 <group name="payment_detail" string="Payment Details">
                                     <label for="writeoff_account_id" string="Post Difference In"/>
                                     <div class="o_row">
                                        <field name="writeoff_account_id" string="Post Difference In" options="{'no_create':True}" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                     </div>
                                     <field name="analytic_account_id" options="{'no_create':True}" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                     <field name="writeoff_label" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                                     <label for="exchange_rate" />
                                     <div>
                                        <field name="exchange_rate" />
                                        <i class="text-muted "><field name="last_exchange_rate" /> </i>
                                    </div>
                                </group>
                                 <group class="oe_subtotal_footer oe_right" colspan="4" name="allocation_total" string="Subtotal">
                                    <field name="debit_total_currency" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="credit_total_currency" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="diff_amount_currency" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                     
                                     <div class="oe_clear"/>
                                     <div class="oe_clear"/>
                                     <h3>Reconcilliation Difference</h3>
                                     <field name="debit_total" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                    <field name="credit_total" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                    <field name="diff_amount" invisible="0" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                     <field name="company_currency_id" invisible="1" />
                                    
                                 </group>
                             </group>
                         </page>
                         <page string='Journal Items'>
                             <field name='matching_move_line_ids' />
                             <!--
                                 <tree>
                                     <field name='id' invisible="1"/>
                                     <field name='account_id' />
                                     <field name='move_id'  string='Entry'/>
                                     <field name='name' />
                                     <field name='analytic_account_id'  optional='hide'/>
                                     <field name='analytic_tag_ids' widget='many2many_tags' optional='hide'/>
                                     <field name='debit' />
                                     <field name='credit' />
                                     <field name='amount_currency' optional='show' />
                                     <field name='currency_id' optional='hide'/>
                                 </tree>
                             </field>
-->
                         </page>
                     </notebook>
                </xpath>
            </field>
        </record> 

  </data>
</odoo>
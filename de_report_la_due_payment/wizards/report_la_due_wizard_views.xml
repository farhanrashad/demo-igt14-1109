<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="report_la_due_wizard_form_view" model="ir.ui.view">
			<field name="name">report.la.due.wizard.form.view</field>
			<field name="model">report.la.due.wizard</field>
			<field name="arch" type="xml">
				<form string="Inventory Valuation">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
				
					<footer>
						<button name="print_report" type="object" string="Print" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_report_la_due_wizard" model="ir.actions.act_window">
			<field name="name">Lease Due Payments Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">report.la.due.wizard</field>
			<field name="view_id" ref="report_la_due_wizard_form_view" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
        
        <menuitem action="action_report_la_due_wizard" id="report_la_due_report_item" name="Lease Due Payment" parent="de_purchase_subscription.purchase_subscription_report_menu" sequence="120"/>


    </data>
</odoo>
